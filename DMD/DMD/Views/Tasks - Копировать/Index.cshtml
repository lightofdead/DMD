@model IEnumerable<DMD.Models.Task>

@{
    ViewData["Title"] = "Index";
}


<p>
    <a asp-action="Create" class="btn btn-sm btn-success ml-1">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentTask)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentTask.ID)
            </td>
            <td>
                <div class="btn-group">
                <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-info"> Edit </a> 
                <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-primary ml-1"> Details </a>
                <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-danger ml-1"> Delete </a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
